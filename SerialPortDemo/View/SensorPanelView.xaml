<UserControl
    x:Class="SerialPortDemo.View.SensorPanelView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="DictionaryOne.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <StackPanel
        x:Name="rootPanel"
        Width="{Binding Width}"
        Height="{Binding Height}">
        <DockPanel>
            <CheckBox
                Margin="10,0,20,0"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                ClickMode="Press"
                IsChecked="{Binding IsChecked, Mode=TwoWay}"
                Style="{DynamicResource CheckBox_Normal}" />
            <Label
                x:Name="label"
                HorizontalAlignment="Center"
                Content="传感器"
                FontSize="14" />
            <Label
                x:Name="labelSensorId"
                HorizontalAlignment="Left"
                Content="{Binding LabNum}"
                FontSize="14" />
        </DockPanel>

        <DockPanel Margin="5">
            <Label Content="X值：" FontSize="14" />
            <TextBox
                x:Name="tbHead"
                Width="100"
                Background="AliceBlue"
                BorderThickness="0"
                Text="{Binding TextHead}" />
        </DockPanel>
        <DockPanel Margin="5">
            <Label Content="Y值：" FontSize="14" />
            <TextBox
                x:Name="tbPitch"
                Width="100"
                Background="AliceBlue"
                BorderThickness="0"
                Text="{Binding TextPitch}" />
        </DockPanel>
        <DockPanel Margin="5">
            <Label Content="Z值：" FontSize="14" />
            <TextBox
                x:Name="tbRoll"
                Width="100"
                Background="AliceBlue"
                BorderThickness="0"
                Text="{Binding TextRoll}" />
        </DockPanel>
    </StackPanel>


</UserControl>